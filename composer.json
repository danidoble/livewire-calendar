{
    "name": "danidoble/livewire-calendar",
    "description": "A simple Laravel package skeleton development environment",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "package",
        "skeleton",
        "danidoble"
    ],
    "authors": [
        {
            "name": "Dani Doble",
            "email": "ddanidoble@gmail.com",
            "homepage": "https://danidoble.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "livewire/livewire": "^3.4"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "laravel/prompts": "^0.1.21",
        "orchestra/testbench": "^8.21|^v9.0.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-drift": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Danidoble\\LivewireCalendar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/",
            "Danidoble\\LivewireCalendar\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Danidoble\\LivewireCalendar\\Providers\\LivewireCalendarServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "composer configure"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ],
        "configure": [
            "@php -f configure.php || echo 'configure.php not found. Skipping...'",
            "@php vendor/bin/pint",
            "@php -r \"if (file_exists('configure.php')) { unlink('configure.php'); }\"",
            "composer update"
        ],
        "post-install-cmd": [
            "php configure.php"
        ]
    }
}
